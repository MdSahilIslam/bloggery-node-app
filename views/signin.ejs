<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/header') %>
    <title>Sign In</title>
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <h1 class="mt-4 container">This is the Sign In page</h1>
    <div class="container mt-4">
      <form action="/user/signin" method="post">

        <div class="mb-3">
          <label for="email" class="form-label"
            >Email address</label
          >
          <input
            type="email"
            class="form-control"
            id="input-email"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
          />
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <%- include('./partials/script') %>
  </body>
</html>
